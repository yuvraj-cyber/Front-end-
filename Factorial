<body>



<h2>Factorial of a Number</h2>

<button onclick="calculateFactorial()">Calculate Factorial</button>



<script>

function calculateFactorial() {

    var num = parseInt(prompt("Enter a number:"));

    var factorial = 1;



    for (var i = 1; i <= num; i++) {

        factorial *= i;

    }



    alert("The factorial of " + num + " is: " + factorial);

}

</script>



</body>

